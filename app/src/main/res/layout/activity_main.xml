<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tsuyogbasnet.mdesign.MainActivity">

    <!-- adding custom toobar using include -->
    <include android:id="@+id/app_bar"
        layout="@layout/app_bar">

    </include>

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_height="wrap_content" />

</RelativeLayout>

    <fragment
        android:id="@+id/fragment_nav_draw"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_nav_draw"
        android:name="com.tsuyogbasnet.mdesign.NavDrawFragment"
        tools:layout="@layout/fragment_nav_draw" />

</android.support.v4.widget.DrawerLayout>
